<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net7.0;net8.0</TargetFrameworks>
    <RootNamespace>Faactory.Channels.Parcel</RootNamespace>
    <AssemblyName>faactory.channels.parcel</AssemblyName>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>Faactory.Channels.Parcel</PackageId>
    <Version>0.4.0</Version>
    <Authors>Goncalo Oliveira</Authors>
    <Description>Channels - Parcel Protocol</Description>
    <RepositoryUrl>https://github.com/goncalo-oliveira/channels-parcel</RepositoryUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>faactory.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="/" />
    <None Include="../faactory.png" Pack="true" PackagePath="/" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Faactory.Channels.Core" Version="0.9.0" />
  </ItemGroup>

</Project>
